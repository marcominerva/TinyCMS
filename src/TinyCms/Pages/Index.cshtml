@page "{url?}"

@model IndexModel
@{
    ViewData["Title"] = Model.ContentPage?.Title;
    ViewData["SiteTitle"] = Model.ContentPage?.Site.Title;
    ViewData["LogoUrl"] = Model.ContentPage?.Site.LogoUrl;
    ViewData["ShowLogoOnly"] = Model.ContentPage?.Site.ShowLogoOnly ?? false;
}

@section Head
{
    @if (Model.ContentPage is not null)
    {
        @foreach (var styleSheet in Model.ContentPage.Site.StyleSheetUrls.EmptyIfNull())
        {
            <link rel="stylesheet" href="@styleSheet" asp-append-version="true" />
        }

        @if (!string.IsNullOrWhiteSpace(Model.ContentPage.Site.StyleSheetContent))
        {
            <raw><style type="text/css">@Model.ContentPage.Site.StyleSheetContent</style></raw>
        }

        @foreach (var styleSheet in Model.ContentPage.StyleSheetUrls.EmptyIfNull())
        {
            <link rel="stylesheet" href="@styleSheet" asp-append-version="true" />
        }

        @if (!string.IsNullOrWhiteSpace(Model.ContentPage.StyleSheetContent))
        {
            <raw><style type="text/css">@Model.ContentPage.StyleSheetContent</style></raw>
        }
    }
}

<raw>@Model.ContentPage?.Content</raw>